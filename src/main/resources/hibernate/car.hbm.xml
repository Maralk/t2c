<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.proof.t2c.domain.entities.Car" table="cars">
        <id name="id" type="java.lang.Integer">
            <generator class="identity"/>
        </id>
        <property name="carLicense" unique="true" type="string"/>
        <many-to-one name="model" column="model_id" class="com.proof.t2c.domain.entities.Model" not-null="true"/>
        <many-to-one name="owner" column="owner_id" class="com.proof.t2c.domain.entities.User" not-null="true"/>
        <many-to-one name="purchase" column="purchase_id" class="com.proof.t2c.domain.entities.Purchase"/>
        <many-to-one name="sale" column="sale_id" class="com.proof.t2c.domain.entities.Sale"/>
        <property name="createdAt" type="timestamp"/>
        <property name="updatedAt" type="timestamp"/>
    </class>
</hibernate-mapping>
