<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.proof.t2c.domain.entities.Sale" table="sales">
        <id name="id" type="java.lang.Integer">
            <generator class="identity"/>
        </id>
        <many-to-one name="car" column="car_id" class="com.proof.t2c.domain.entities.Car" not-null="true"/>
        <many-to-one name="previousOwner" column="previous_owner_id" class="com.proof.t2c.domain.entities.User"
                     not-null="true"/>
        <many-to-one name="newOwner" column="new_owner_id" class="com.proof.t2c.domain.entities.User" not-null="true"/>
        <property name="price" type="float"/>
        <property name="date" type="timestamp" not-null="true"/>
        <property name="createdAt" type="timestamp"/>
        <property name="updatedAt" type="timestamp"/>
    </class>
</hibernate-mapping>
